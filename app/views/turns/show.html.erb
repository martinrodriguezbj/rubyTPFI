<h2>Bank: <%= @bank.name %></h2>
<h2>Day: <%= @turn.day %></h2>
<h2>Hour: <%= @turn.hour %></h2>
<h2>State: <%= @turn.state %></h2>
<h2>Reason: <%= @turn.reason %></h2>
<h2>Result: <%= @turn.result %></h2>
<h2>Attended by: <%= @bank_staff.username %></h2>


<div>
  <%= link_to "Attend this turn", attend_turn_path(@turn) %> |
  <%= link_to "Edit this turn", edit_turn_path(@turn) %> |
  <%= link_to "Back to turns", turns_path %>

  <%= button_to "Destroy this turn", @turn, method: :delete %>
</div>
