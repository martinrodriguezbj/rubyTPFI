<%= form_with(model: bank) do |form| %>
  <% if bank.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(bank.errors.count, "error") %> prohibited this bank from being saved:</h2>

      <ul>
        <% bank.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= Current.user.inspect %>
  Are you admin? <%= Current.user.has_role? :Administrador %>
  #mostrar todos los roles del usuario
  

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.number_field :phone %>
  </div>

  #se debe seleccionar una localidad
  <div>
    <%= form.label :locality_id, style: "display: block" %>
    <%= form.select :locality_id, options_from_collection_for_select(Locality.all, :id, :locality) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
