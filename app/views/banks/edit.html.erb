<h1>Editing bank</h1>

<%= form_with(model: @bank) do |form| %>
  <% if @bank.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@bank.errors.count, "error") %> prohibited this bank from being saved:</h2>

      <ul>
        <% @bank.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.number_field :phone %>
  </div>

<h3>Schedules</h3>
<% @bank.schedules.each do |schedule| %> 
<div>
<%if schedule.startAttention && schedule.endAttention%>
<%= schedule.day %> |<%= schedule.startAttention %> a <%= schedule.endAttention %>hs| <%= link_to "Edit this schedule", editSchedule_schedule_path(schedule.id) %>
<%else%>
<%= schedule.day %> |no attention| <%= link_to "Edit this schedule", editSchedule_schedule_path(schedule.id) %>
<% end %>
<% end %>
</div>



  <div>
    <%= form.submit %>
  </div>
<% end %>